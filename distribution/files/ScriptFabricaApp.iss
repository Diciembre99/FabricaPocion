OutputBaseFilename=FabricaApp
SetupIconFile=C:\Users\KRene\OneDrive\Documentos\DAM 1\ENDES\FabricaPociones\distribution\ico.ico
Compression=lzma
SolidCompression=yes
WizardStyle=modern

[Languages]
Name: "english"; MessagesFile: "compiler:Default.isl"
