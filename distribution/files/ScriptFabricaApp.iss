DefaultDirName={autopf}\{#MyAppName}
ChangesAssociations=yes
DefaultGroupName={#MyAppName}
AllowNoIcons=yes
LicenseFile=C:\Users\KRene\OneDrive\Documentos\DAM 1\ENDES\FabricaPociones\distribution\files\licencia.txt
